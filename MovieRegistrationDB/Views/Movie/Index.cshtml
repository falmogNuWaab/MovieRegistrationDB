@model Movie

<h1>Welcome to Movie HOME</h1>
<h3>Use this form to add a movie to the database</h3>

@using (Html.BeginForm("Index", "Movie", FormMethod.Post))
{

    <div>
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m=>m.Title)
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" });
    </div>
    <div>
        @Html.LabelFor(m=>m.Genre)
        <select name="Genre">
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Horror">Horror</option>
            <option value="Mystery">Mystery</option>
            <option value="Romance">Romance</option>
            <option value="Thriller">Thriller</option>
            <option value="Western">Western</option>
        </select>
    </div>
    <div>
        Release date
        <input type="number" name="releaseYear" maxlength="4" length="4" />
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" });

    </div>
    <div>
        Runtime
        <input type="number" name="Runtime" />
    </div>
    <input type="submit" />
}